#!/usr/bin/env bash
ENV=testing
if [[ $CI_BRANCH =~ ^v[0-9]+.[0-9]+.[0-9]+$ ]]; then
  ENV=production
elif [[ $CI_BRANCH =~ ^release/[0-9]+.[0-9]+$ ]]; then
  ENV=staging
else
  ENV=testing
fi

APT_REPO="${APT_REPO:internal.apt.fresh8.tech}"
ARCH=$(dpkg --print-architecture)

LATEST=$(ls -t1 f8-$NAME*.deb 2>/dev/null | head -n 1)

if [[ -z $LATEST ]]; then
  echo No .deb files found for $NAME >&2
  exit 1
fi

curl -X POST -F file=@$LATEST http://$APT_REPO/api/files/$LATEST
curl -X POST http://$APT_REPO/api/files/$LATEST
curl -X POST http://$APT_REPO/api/repos/$ENV/file/$LATEST
curl -X POST -F "pkg=$(basename $LATEST .deb)" -F "env=$ENV" http://$APT_REPO/notify
